#include <stdio.h>
#include <stdlib.h>
#include <sys/types.h>
#include <unistd.h>
#include <string.h>
#include <semaphore.h>
#include <time.h>
#include <sys/mman.h>
#include <pthread.h>

FILE *fptr;

void process1()
{
	char str[50];

	for(int x = 0; x < 5; ++x)
	{
		strncat(str, "Process 1 Running...%d\n", x);
		printf("Process 1 Running...%d\n", x);
		fprintf(fptr, "%d.%s\n", x, str );
	}
	fclose(fptr);
}

void process2()
{
	char str[50];

	for(int x = 0; x < 5; ++x)
	{
		strncat(str, "Process 2 Running...%d\n", x);
		printf("Process 2 Running...%d\n", x);
		fprintf(fptr, "%d. %s\n", x, str);
	}
	fclose(fptr);
}

int main(int argc, char *argv[])
{
	pid_t pid;
	fptr = fopen("ActivityLog.txt", "w");
	fclose(fptr);

	fptr = fopen("ActivityLog.txt", "a");

	pid = fork();

	if(pid == -1)
	{
		printf("ERROR creating fork.\n");
		_exit(1);
	}

	if(pid == 0)
	{
		process1();
		sleep(1);
	}
	else
	{
		process2();
		sleep(1);
	}

	return 0;
}
